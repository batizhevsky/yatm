<% publish_to "/messages/update" do %>
  var task = $(".task-id<%= @task.id %>");
  $(task).fadeOut("slow", function(){
    var new_task = $("<%= j render(@task) %>");
    $(this).replaceWith(new_task);
    $(task).fadeIn("slow");
  });
<% end %>

<% if @task.responsible_online? && !current_user_is(@task.responsible) %>
  <% publish_to "/messages/user-#{ @task.responsible_id }" do %>

    var msg = "<%=j render('shared/popup_message', message: message) %>";
    $('#alert').html(msg).hide();
    $('#alert').fadeIn("slow", function(){
      window.setTimeout(function () {
        $('#alert').fadeOut("slow");
      }, 3000);
    });
  <% end %>
<% end %>
